<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lgy.projectdemo.MainActivity">

    <TextView
        android:id="@+id/tv_sv_rv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="看看ScrollView嵌套RecycleView" />

    <TextView
        android:id="@+id/tv_playback"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_test"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_sv_rv"
        android:divider="@color/colorAccent"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
